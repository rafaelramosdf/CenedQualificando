
@page "/cadastros/penitenciarias"

@inherits CenedQualificando.Web.Admin.Shared.CodeBase.Pages.ListPageBase<PenitenciariaDto>
@inject ISnackbar Snackbar
@using Domain.Models.Dtos

<MudTable ServerData="@(new Func<TableState, Task<TableData<PenitenciariaDto>>>(ServerReload))"
          @ref="Table"
          Dense="true"
          Hover="true"
          Striped="false"
          @bind-SelectedItem="ItemSelecionado"
          SortLabel="Ordenar por">

    <ToolBarContent>
        <MudToolBarSpacer />
        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))"
                      Placeholder="Pesquisar por Nome, Cidade ou UF"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Class="mt-0">
        </MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>
            <MudMenu Icon="@Icons.Material.Filled.ViewList" Color="Color.Primary" Disabled="true">
                <MudMenuItem>...</MudMenuItem>
            </MudMenu>
        </MudTh>
        <MudTh><MudTableSortLabel T="PenitenciariaDto" SortLabel="@nameof(PenitenciariaDto.Nome)" InitialDirection="SortDirection.Ascending">Nome</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="PenitenciariaDto" SortLabel="@nameof(PenitenciariaDto.Cidade)">Cidade</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="PenitenciariaDto" SortLabel="@nameof(PenitenciariaDto.Uf)">UF</MudTableSortLabel></MudTh>
        <MudTh><MudText>Ativo</MudText></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            <MudMenu Icon="@Icons.Material.Filled.MoreVert">
                <MudMenuItem>Alterar</MudMenuItem>
                <MudMenuItem>Consultar</MudMenuItem>
                <MudMenuItem>Excluir</MudMenuItem>
            </MudMenu>
        </MudTd>
        <MudTd DataLabel="Nome">@context.Nome.ToUpper()</MudTd>
        <MudTd DataLabel="Cidade">@context.Cidade.ToUpper()</MudTd>
        <MudTd DataLabel="UF">@context.UfDescricao</MudTd>
        <MudTd DataLabel="Ativo">@context.AtivoDescricao</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager Style="float: left;"
                       RowsPerPageString="Itens por página: " 
                       PageSizeOptions="new int[] { 5, 10, 20, 50, 100 }" 
                       InfoFormat="{first_item}-{last_item} de {all_items}" />
    </PagerContent>
</MudTable>

<MudFab Color="Color.Success" Icon="@Icons.Material.Filled.Add"
        Style="position: fixed; bottom: 45px; right: 30px;" />

<MudOverlay @bind-Visible="State.Carregando" DarkBackground="true" ZIndex="9999" AutoClose="true">
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
</MudOverlay>