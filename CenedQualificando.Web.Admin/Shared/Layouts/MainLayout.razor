@inherits LayoutComponentBase

@inject StateContainer State

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText>&nbsp;&nbsp; @State.TituloPagina</MudText>
        <MudAppBarSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/rafaelramosdf/CenedQualificando" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Breakpoint="Breakpoint.Lg" PreserveOpenState="true" Variant="@DrawerVariant.Responsive" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">CENED Qualificando</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Style="padding-left: 20px; padding-right: 20px;">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}