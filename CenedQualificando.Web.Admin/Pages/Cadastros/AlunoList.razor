@page "/alunos"

@inherits CenedQualificando.Web.Admin.Shared.CodeBase.Pages.ListPageBase<AlunoDto>
@inject ISnackbar Snackbar
@using Domain.Models.Dtos

<MudTable ServerData="@(new Func<TableState, Task<TableData<AlunoDto>>>(ServerReload))"
          @ref="Table"
          Dense="true"
          Hover="true"
          ReadOnly="@SomenteLeitura"
          Striped="false"
          @bind-SelectedItem="ItemSelecionado"
          SortLabel="Ordenar por">
    <ToolBarContent>
        <MudToolBarSpacer />
        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))"
                      Placeholder="Pesquisar por Nome ou CPF"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Class="mt-0">
        </MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>
            <MudMenu Icon="@Icons.Material.Filled.ViewList" Color="Color.Primary" Disabled="true">
                <MudMenuItem>...</MudMenuItem>
            </MudMenu>
        </MudTh>
        <MudTh><MudTableSortLabel T="AlunoDto" SortLabel="@nameof(AlunoDto.Nome)" InitialDirection="SortDirection.Ascending">Nome</MudTableSortLabel></MudTh>
        <MudTh><MudText>CPF</MudText></MudTh>
        <MudTh><MudText>Preposto</MudText></MudTh>
        <MudTh><MudText>CPF Preposto</MudText></MudTh>
        <MudTh><MudText>UF / Penitenciária</MudText></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            <MudMenu Icon="@Icons.Material.Filled.MoreVert">
                <MudMenuItem>Alterar</MudMenuItem>
                <MudMenuItem>Consultar</MudMenuItem>
                <MudMenuItem>Excluir</MudMenuItem>
            </MudMenu>
        </MudTd>
        <MudTd DataLabel="Nome">@context.Nome.ToUpper()</MudTd>
        <MudTd DataLabel="Cpf">@context.Cpf</MudTd>
        <MudTd DataLabel="NomePreposto">@context.NomePreposto.ToUpper()</MudTd>
        <MudTd DataLabel="CpfPreposto">@context.CpfPreposto</MudTd>
        <MudTd DataLabel="Penitenciaria">@context.Penitenciaria.UfDescricao / @context.Penitenciaria.Nome.ToUpper()</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager RowsPerPageString="Itens por página: "
                       PageSizeOptions="new int[] { 5, 10, 20, 50, 100 }"
                       InfoFormat="{first_item}-{last_item} de {all_items}" />
    </PagerContent>
</MudTable>

<MudFab Color="Color.Success" Icon="@Icons.Material.Filled.Add"
        Style="position: fixed; bottom: 45px; right: 30px;" />

<MudOverlay @bind-Visible="State.Carregando" DarkBackground="true" ZIndex="9999" AutoClose="true">
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
</MudOverlay>