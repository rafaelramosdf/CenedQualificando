@page "/"

@inject StateContainer State

<MudGrid>
    <MudItem md="12" xs="12">
        <MudPaper Elevation="0" Class="py-4 px-2">
            <MudText Typo="Typo.h5">
                <MudIcon Icon="@Icons.Material.Filled.LocalLibrary" Size="Size.Medium"></MudIcon>
                CENED Qualificando | Sistema de Gestão EaD para Presidiários
            </MudText>
        </MudPaper>
    </MudItem>

    <MudItem md="3" xs="12">
        <MudPaper Style="@($"background-color: {@Colors.Red.Default}")" Class="pa-4">
            <MudText Typo="Typo.h3" Style="@($"color: {Colors.Red.Lighten5};")">15</MudText>
            <MudText Style="@($"color: {Colors.Red.Lighten5};")">Aguardando Material</MudText>
        </MudPaper>
    </MudItem>
    <MudItem md="3" xs="12">
        <MudPaper Style="@($"background-color: {@Colors.Orange.Default}")" Class="pa-4">
            <MudText Typo="Typo.h3" Style="@($"color: {Colors.Orange.Lighten5};")">180</MudText>
            <MudText Style="@($"color: {Colors.Orange.Lighten5};")">Aguardando Prova</MudText>
        </MudPaper>
    </MudItem>
    <MudItem md="3" xs="12">
        <MudPaper Style="@($"background-color: {@Colors.BlueGrey.Default}")" Class="pa-4">
            <MudText Typo="Typo.h3" Style="@($"color: {Colors.BlueGrey.Lighten5};")">27</MudText>
            <MudText Style="@($"color: {Colors.BlueGrey.Lighten5};")">Aguardando Certificado</MudText>
        </MudPaper>
    </MudItem>
    <MudItem md="3" xs="12">
        <MudPaper Style="@($"background-color: {@Colors.Green.Default}")" Class="pa-4">
            <MudText Typo="Typo.h3" Style="@($"color: {Colors.Green.Lighten5};")">3500</MudText>
            <MudText Style="@($"color: {Colors.Green.Lighten5};")">Em Andamento</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

@code{
    protected override void OnInitialized()
    {
        State.OnChange += StateHasChanged;
        State.TituloPagina = "Página Inicial";
    }

    public void Dispose()
    {
        State.OnChange -= StateHasChanged;
    }
}